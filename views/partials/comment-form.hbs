<!-- views/partials/comment-form.handlebars -->
<div class="comment-form">
<form action="/loads/comments" method="post" >
    <input type="hidden" value="{{load._id}}" name="loadId"
    <fieldset class= "comment-area">
        <legend>Add a Review</legend>
        <!-- TITLE -->
        <div class="form-group">
            <label for="comment-title">Title</label><br>
            <input class="form-control"
                id="comment-title"
                type="text"
                name="title"
                placeholder="Title"/>
        </div>

        <!-- DESCRIPTION -->
        <div class="form-group">
            <label for="comment-content">Description</label>
            <textarea class="form-control"
            id="comment-content"
            name="content"
            rows="10"
            placeholder="Your comment ..."
            ></textarea>
        </div>
    </fieldset>
    <!-- BUTTON -->
    <div class="form-group">
        <button class="btn btn-primary" id="comment-btn" type="submit">Save Review</button>
    </div>
</form>
</div>
