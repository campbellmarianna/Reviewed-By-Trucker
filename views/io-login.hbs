<div class="login">
    <h1>Login</h1>
    <form method="POST" action="/io-login">
        <div class="form-group">
                <label for="username">Username:</label><br>
                <input class="form-control" id="username" type="text" name="username" value="{{this.username}}"/>
        </div>
        <div class="form-group">
                <label for="password">Password:</label><br>
                <input class="form-control" id="password" type="text" name="password" value="{{this.password}}"/>
        </div>
        <!-- BUTTON -->
        <button type="submit" id="login-btn"class="btn btn-outline-primary">Submit</button>
    </form>
</div>
